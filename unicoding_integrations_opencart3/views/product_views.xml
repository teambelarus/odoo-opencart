<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- base structure of product.template, common with product.product -->
    <record id="unicoding_marketplace_opencart3_product_template_form_view" model="ir.ui.view">
        <field name="name">unicoding_marketplace_opencart3.product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']" position="after">
                <page string="Opencart" name="Opencart">
                    <group>
                        <field name="opencart_url"/>
                        <field name="opencartid"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

     <record id="unicoding_marketplace_opencart3_product_category_form_view" model="ir.ui.view">
        <field name="name">unicoding_marketplace_opencart3.product.category.form.view</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="unicoding_marketplace.unicoding_marketplace_product_category_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='unicoding_marketplace_id']" position="after">
               <field name="opencartid"/>
            </xpath>
        </field>
    </record>


    </data>
</odoo>
